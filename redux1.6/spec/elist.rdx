DATATYPE LIST;
SORT
	EL, LIST;
CONST
	0: EL;
	NIL: LIST;
VAR
	A, B, C: EL;
	L, M, N: LIST;
OPERATOR
	APP: LIST, LIST -> LIST;
	CONS: EL, LIST -> LIST;
	ECONS: LIST, EL -> LIST;
	REV: LIST -> LIST;
NOTATION
	APP, CONS, ECONS, REV: FUNCTION;
AXIOM
[1] APP(NIL,L)==L;
[2] APP(CONS(A,L),M)==CONS(A,APP(L,M));
[3] REV(NIL)==NIL;
[4] REV(CONS(A,L))==APP(REV(L),CONS(A,NIL));
[5] ECONS(NIL,A)==CONS(A,NIL);
[6] ECONS(L,A)==APP(L,CONS(A,NIL));
END
